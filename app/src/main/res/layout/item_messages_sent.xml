<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/spacing_small"
    android:orientation="vertical">

    <LinearLayout
        android:elevation="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/rounded_rectangle_send"
        android:orientation="vertical"
        android:padding="@dimen/spacing_small">

        <TextView
            android:id="@+id/tvMessageSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:maxWidth="240dp"
            android:paddingLeft="@dimen/spacing_small"
            android:paddingRight="@dimen/spacing_small"
            tools:text="kucing satu"
            android:textColor="@color/textAndIcon" />

        <ImageView
            android:id="@+id/ivMessageSent"
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingLeft="@dimen/spacing_small"
            android:paddingRight="@dimen/spacing_small" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMessageSentHour"
                android:layout_width="wrap_content"
                android:textColor="@color/textAndIcon"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/montserrat"
                android:text="11:40"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/ivDoubleCheckSent"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:layout_marginStart="@dimen/spacing_small"
                android:src="@drawable/attach_double_check_white" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>